pipeline {
    agent any
    
    tools {
        go 'go'
    }

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Nexus Docker registry host (no http://)
        NEXUS_HOST = "10.60.240.195:8081"

        // Nexus docker hosted repo
        NEXUS_REPO = "docker-releases"

        // Full Docker image path (valid format)
        DOCKER_IMAGE = "${NEXUS_HOST}/${NEXUS_REPO}/${APP_NAME}:${IMAGE_TAG}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
                echo "Code checked out successfully."
            }
        }

        stage('Go Build') {
            steps {
                sh '''
                    echo "Building Go application..."
                    cd application
                    go mod tidy
                    go build -o go_app .
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    echo "Building Docker Image..."
                    docker build -t ${DOCKER_IMAGE} .
                """
            }
        }

        stage('Push to Nexus Docker Registry') {
            environment {
                NEXUS_USER = credentials('nexus-username')
                NEXUS_PASSWORD = credentials('nexus-password')
            }
            steps {
                sh """
                    echo "Logging into Nexus..."
                    echo "${NEXUS_PASSWORD}" | docker login ${NEXUS_HOST} -u "${NEXUS_USER}" --password-stdin

                    echo "Pushing Docker Image..."
                    docker push ${DOCKER_IMAGE}
                """
            }
        }

        stage('Deploy Using Helm') {
            steps {
                sh """
                    echo "Deploying using Helm..."
                    helm upgrade --install ${APP_NAME} ./charts/go-app-chart \
                        --set image.repository=${NEXUS_HOST}/${NEXUS_REPO}/${APP_NAME} \
                        --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }

    post {
        success { echo "CI/CD pipeline completed successfully!" }
        failure { echo "Pipeline failed. Check logs." }
    }
}