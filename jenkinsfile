pipeline {
    agent any
    
    tools {
        go 'go'
    }

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Nexus Docker registry URL
        NEXUS_URL = "http://10.60.240.195:8081"

        // Nexus docker hosted repo (repository name)
        NEXUS_REPO = "docker-releases"

        // Full image path
        DOCKER_IMAGE = "${NEXUS_URL}/repository/${NEXUS_REPO}/${APP_NAME}:${IMAGE_TAG}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
                echo "Code checked out successfully."
            }
        }

        stage('Go Build') {
            steps {
                sh '''
                    echo "Building Go application..."
                    cd application
                    go mod tidy
                    go build -o go_app .
                '''
            }
        }

        stage('Install Docker') {
            steps {
                sh '''
                    echo "Installing Docker..."
                    # Update package info
                    apt-get update -y

                    # Install prerequisites
                    apt-get install -y apt-transport-https ca-certificates curl gnupg lsb-release

                    # Add Docker GPG key
                    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

                    # Add Docker repository
                    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null

                    # Install Docker
                    apt-get update -y
                    apt-get install -y docker-ce docker-ce-cli containerd.io

                    # Add jenkins user to docker group
                    usermod -aG docker $USER
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                    echo "Building Docker Image..."
                    docker build -t ${DOCKER_IMAGE} .
                '''
            }
        }

        stage('Push to Nexus Docker Registry') {
            environment {
                NEXUS_USER = credentials('nexus-username')
                NEXUS_PASSWORD = credentials('nexus-password')
            }
            steps {
                sh '''
                    echo "Logging into Nexus..."
                    echo "${NEXUS_PASSWORD}" | docker login ${NEXUS_URL} -u "${NEXUS_USER}" --password-stdin

                    echo "Pushing Docker Image..."
                    docker push ${DOCKER_IMAGE}
                '''
            }
        }

        stage('Deploy Using Helm') {
            steps {
                sh '''
                    echo "Deploying using Helm..."
                    helm upgrade --install ${APP_NAME} ./charts/go-app-chart \
                        --set image.repository=${NEXUS_URL}/repository/${NEXUS_REPO}/${APP_NAME} \
                        --set image.tag=${IMAGE_TAG}
                '''
            }
        }
    }

    post {
        success { echo "CI/CD pipeline completed successfully!" }
        failure { echo "Pipeline failed. Check logs." }
    }
}