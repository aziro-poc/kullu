pipeline {
    agent any

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Nexus Docker registry
        NEXUS_URL = "http://10.60.240.195/:8081"
        NEXUS_REPO = "docker-releases"

        // Full Docker image path
        DOCKER_IMAGE = "${NEXUS_URL}/${NEXUS_REPO}/${APP_NAME}:${IMAGE_TAG}"

    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
                echo "Code checked out successfully."
            }
        }

        stage('Go Build (Local Test Build)') {
            steps {
                cd application
                sh '''
                    echo "Running Go build..."
                    go mod tidy
                    go build -o go_app .
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    echo "Building Docker image using scratch build..."
                    docker build -t ${DOCKER_IMAGE} .
                """
            }
        }

        stage('Push to Nexus Docker Registry') {
            environment {
                NEXUS_USER = credentials('nexus-username')
                NEXUS_PASSWORD = credentials('nexus-password')
            }
            steps {
                sh """
                    echo "Logging into Nexus Docker Registry..."
                    echo "${NEXUS_PASSWORD}" | docker login ${NEXUS_URL} -u "${NEXUS_USER}" --password-stdin
                    
                    echo "Pushing image to Nexus..."
                    docker push ${DOCKER_IMAGE}
                """
            }
        }

        stage('Deploy on Kubernetes using Helm') {
            steps {
                sh """
                    echo "Deploying application using Helm..."
                    helm upgrade --install ${APP_NAME} ./charts/go-app-chart \\
                        --set image.repository=${NEXUS_URL}/${NEXUS_REPO}/${APP_NAME} \
                        --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }

    post {
        success {
            echo "CI/CD pipeline completed successfully!"
        }
        failure {
            echo "Something failed in the pipeline. Check logs."
        }
    }
}