pipeline {
    agent any
    
    tools {
        go 'go'
        git 'Default'
    }

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Docker Hub credentials
        DOCKER_HUB_CREDS = credentials('dockerhub')
        DOCKER_IMAGE = "${DOCKER_HUB_CREDS_USR}/${APP_NAME}:${IMAGE_TAG}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/aziro-poc/kullu.git', 
                    credentialsId: 'github'

                echo "Code checked out successfully."
            }
        }

        stage('Go Build') {
            steps {
                bat """
                    echo "Building Go application..."
                    cd application
                    go mod tidy
                    go build -o go_app .
                """
            }
        }

        stage('Docker Build') {
            steps {
                bat """
                    echo "Building Docker Image..."
                    docker build -t ${DOCKER_IMAGE} -f application/Dockerfile application
                """
            }
        }

        stage('Push to Docker Hub') {
        steps {
            bat """
                echo "Logging into Docker Hub..."
                docker login -u %DOCKER_HUB_CREDS_USR% -p %DOCKER_HUB_CREDS_PSW%
    
                echo "Pushing Docker image to Docker Hub..."
                docker push ${DOCKER_IMAGE}
            """
        }
    }

        stage('Deploy Using Helm') {
            steps {
                bat """
                    echo Deploying using Helm...
                    set KUBECONFIG=C:\\jenkins_home\\.kube\\config
                    helm upgrade --install %APP_NAME% charts\\go-app-chart ^
                        --set image.repository=%DOCKER_HUB_CREDS_USR%/%APP_NAME% ^
                        --set image.tag=%IMAGE_TAG%
                """
            }
        }
    }

    post {
        success { echo "CI/CD pipeline completed successfully!" }
        failure { echo "Pipeline failed. Check logs." }
    }
}