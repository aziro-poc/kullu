pipeline {
    agent any
    
    tools {
        go 'go'
        git 'Default'
    }

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Nexus Docker registry URL
        NEXUS_URL = "10.60.240.195:8081"

        // Nexus docker hosted repo (repository name)
        NEXUS_REPO = "docker-releases"

        // Full image path
        DOCKER_IMAGE = "${NEXUS_URL}/repository/${NEXUS_REPO}/${APP_NAME}:${IMAGE_TAG}"
    }

    stages {
        options {
            wipeWorkspace()
        }
        stage('Checkout Code') {
            steps {
                git branch: 'master', 
                url: 'https://github.com/aziro-poc/kullu.git', 
                credentialsId: 'github'
                echo "Code checked out successfully."
            }
        }

        stage('Go Build') {
            steps {
                sh '''
                    echo "Building Go application..."
                    cd application
                    go mod tidy
                    go build -o go_app .
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    echo "Building Docker Image..."
                    docker build -t ${DOCKER_IMAGE} -f application/Dockerfile application
                """
            }
        }

        stage('Push to Nexus Docker Registry') {
        environment {
            NEXUS_CREDS = credentials('nexus-creds') // single ID for both username/password
        }
        steps {
            sh """
                echo "Logging into Nexus..."
                echo "${NEXUS_CREDS_PSW}" | docker login ${NEXUS_URL} -u "${NEXUS_CREDS_USR}" --password-stdin
    
                echo "Pushing to Nexus..."
                docker push --tls-verify=false ${DOCKER_IMAGE}
                // docker push ${DOCKER_IMAGE}
            """
        }
    }

        stage('Deploy Using Helm') {
            steps {
                sh """
                    echo "Deploying using Helm..."
                    helm upgrade --install ${APP_NAME} ./charts/go-app-chart \
                        --set image.repository=${NEXUS_URL}/repository/${NEXUS_REPO}/${APP_NAME} \
                        --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }

    post {
        success { echo "CI/CD pipeline completed successfully!" }
        failure { echo "Pipeline failed. Check logs." }
    }
}