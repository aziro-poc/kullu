pipeline {
    agent any
    
    tools {
        go 'go'
        git 'Default'
    }

    environment {
        APP_NAME = "go-app"
        IMAGE_TAG = "${BUILD_NUMBER}"

        // Correct Nexus Docker Registry port (NOT 8081)
        DOCKER_REGISTRY = "10.60.240.195:8082"

        // Nexus docker hosted repo name
        NEXUS_REPO = "docker-releases"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/aziro-poc/kullu.git', 
                    credentialsId: 'github'

                echo "Code checked out successfully."
            }
        }

        stage('Go Build') {
            steps {
                sh '''
                    echo "Building Go application..."
                    cd application
                    go mod tidy
                    go build -o go_app .
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                    echo "Building Docker Image..."
                    docker build -t ${DOCKER_REGISTRY}/${NEXUS_REPO}/${APP_NAME}:${IMAGE_TAG} \
                        -f application/Dockerfile application
                """
            }
        }

        stage('Push to Nexus Docker Registry') {
            environment {
                NEXUS_CREDS = credentials('nexus-creds')
            }
            steps {
                sh '''
                    echo "Logging into Nexus Docker Registry..."
                    echo "$NEXUS_CREDS_PSW" | docker login $DOCKER_REGISTRY -u "$NEXUS_CREDS_USR" --password-stdin

                    echo "Pushing Image..."
                    docker push $DOCKER_REGISTRY/$NEXUS_REPO/$APP_NAME:$IMAGE_TAG
                '''
            }
        }

        stage('Deploy Using Helm') {
            steps {
                sh """
                    echo "Deploying using Helm..."
                    helm upgrade --install ${APP_NAME} ./charts/go-app-chart \
                        --set image.repository=${DOCKER_REGISTRY}/${NEXUS_REPO}/${APP_NAME} \
                        --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }

    post {
        success { echo "CI/CD pipeline completed successfully!" }
        failure { echo "Pipeline failed. Check logs." }
    }
}